<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#7BC1BA"
    android:padding="21dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/TQtxt"
        android:layout_width="wrap_content"
        android:layout_height="56dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:text="Total Question"
        android:textColor="#513463"
        android:textSize="31dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Qtxt"
        android:layout_width="368dp"
        android:layout_height="77dp"
        android:layout_above="@+id/choice_layout"
        android:layout_marginTop="150dp"
        android:layout_marginBottom="13dp"
        android:text="This is question"
        android:textColor="#513463"
        android:textSize="27dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@id/choice_layout"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#FFFFFF"
            android:text="Answer A"
            android:id="@+id/ans_a"
            android:textColor="#0E0E0E"
            android:textSize="24dp"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ans_b"
            android:backgroundTint="#FFFFFF"
            android:text="Answer B"
            android:textColor="#0E0E0E"
            android:textSize="24dp"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#FFFFFF"
            android:id="@+id/ans_c"
            android:text="Answer C"
            android:textColor="#0E0E0E"
            android:textSize="24dp"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ans_d"
            android:backgroundTint="#FFFFFF"
            android:text="Answer D"
            android:textColor="#0E0E0E"
            android:textSize="24dp"/>


    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_submit"
        android:layout_below="@id/choice_layout"
        android:backgroundTint="#B1E674"
        android:text="Submit"
        android:textColor="#0E0E0E"
        android:textSize="24dp"/>



</RelativeLayout>